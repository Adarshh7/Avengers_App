<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<TextView
    android:id="@+id/txtLayoutHeader"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Hello I'm Stark"
android:layout_marginLeft="80dp"
android:padding="8dp"
android:textSize="30sp"
android:textStyle="bold"
android:textColor="#ec407a"
    android:layout_alignParentTop="true"/>

<TextView
    android:id="@+id/txtLayoutSubHeader"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="The Ironman"
android:textSize="20sp"
android:layout_marginStart="120dp"
android:textStyle="italic"
android:padding="8dp"
android:textColor="#2c387e"
    android:layout_below="@id/txtLayoutHeader"/>

<ImageView
    android:id="@+id/imgTonyStark"
android:layout_width="150dp"
android:layout_height="150dp"
android:layout_margin="30dp"
android:src="@drawable/tony_stark"
    android:layout_centerInParent="true"/>

<Button
    android:id="@+id/btFriday"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:padding="10dp"
android:layout_margin="10dp"
android:text="Friday"
android:background="#b23c17"
android:textSize="18sp"
android:textColor="#ffea00"
android:textStyle="bold"
    android:layout_alignParentBottom="true"/>

 <EditText
     android:id="@+id/etVersion"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_margin="30dp"
android:inputType="text"
     android:layout_below="@id/txtLayoutSubHeader"/>

    </RelativeLayout>